/*  */

TOP=../..
COMMON = ../common/

#include "Local.config"

#ifdef Log
DEFS_LOG = -DLOG
#endif
#ifdef Silent
DEFS_SILENT = -DSILENT
#endif
#ifdef ServerSound
DEFS_SERVER_SOUND = -DSERVER_SOUND
#endif
#ifdef PlockServer
DEFS_PLOCKSERVER = -DPLOCKSERVER
#endif
#ifdef XPilotDevelopment
DEFS_DEBUG = -DDEVELOPMENT
#endif

/*
 * Assemble defines and includes.
 *
 * The DEFS_OTHER variable can be specified on the make command line like:
 *
 *    make DEFS_OTHER=-DENABLE_SOME_HACK
 *
 * or in the Local.config file.
 *
 */
DEFINES = \
       $(DEFS_LOG) $(DEFS_SILENT) $(DEFS_SERVER_SOUND) \
       $(DEFS_PLOCKSERVER) $(DEFS_OTHER) $(DEFS_DEBUG)
INCLUDES = $(AUDIOINC) -I$(COMMON) $(EXPATINC) $(CRYPTINC) -I../lib/
LOCAL_LDFLAGS = $(EXPATLIBD) $(CRYPTLIBD)

# keep this variable consistent with its counterpart in ../Makefile.std
SRCS = \
	alliance.c asteroid.c auth.c cannon.c cell.c cmdline.c \
	collision.c command.c contact.c \
	event.c fileparser.c frame.c \
	id.c item.c laser.c \
	map.c metaserver.c netserver.c \
	object.c objpos.c option.c \
	parser.c play.c player.c polygon.c \
	rank.c recwrap.c robot.c robotdef.c rules.c \
	saudio.c sched.c score.c server.c \
	ship.c shipshape_s.c shot.c showtime.c srecord.c \
	tuner.c update.c walls.c walls_old.c wildmap.c xpmap.c xp2map.c

# keep this variable consistent with its counterpart in ../Makefile.std
OBJS = \
	alliance.o asteroid.o auth.o cannon.o cell.o cmdline.o \
	collision.o command.o contact.o \
	event.o fileparser.o frame.o \
	id.o item.o laser.o \
	map.o metaserver.o netserver.o \
	object.o objpos.o option.o \
	parser.o play.o player.o polygon.o \
	rank.o recwrap.o robot.o robotdef.o rules.o \
	saudio.o sched.o score.o server.o \
	ship.o shipshape_s.o shot.o showtime.o srecord.o  \
	tuner.o update.o walls.o walls_old.o wildmap.o xpmap.o xp2map.o

DEPLIBS = $(COMMON)libxpcommon.a 

PROGRAMS = xpilots

ProgramTarget(xpilots,$(COMMON)libxpcommon.a,$(MATHLIB) $(CRYPTLIB) $(EXPATLIB) $(EXTRALIB))
CtagFiles(*.[ch] $(COMMON)*.[ch])
